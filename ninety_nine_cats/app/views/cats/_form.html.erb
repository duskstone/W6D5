<% if edit  %>
    <% action_url = cat_url(cat) %>
<% else %>
    <% action_url = cats_url %>
<% end %>
<form action="<%= action_url %>" method="post">
<% if edit  %>
    <input type="hidden" name="_method" value="PATCH">
<% end %>
  <label for="name">Name</label>
  <input id="name" type="text" name="cat[name]" value="<%= cat.name %>">

  <br>

  <p>Sex:</p>
  <br>
  <input id="male" type="radio" name="cat[sex]" value="M" <%= cat.sex == 'M' ? "checked" : "" %>>
  <label for="male">Male</label>
  <input id="female" type="radio" name="cat[sex]" value="F" <%= cat.sex == 'F' ? "checked" : "" %>>
  <label for="female">Female</label>

  <br>

  <label for="color">Color</label>
  <select id="color" name="cat[color]">
    <option disabled >-- Please Select --</option>
        <% COLORS.each do |color| %> 
    <option value="<%= color  %>"<%= cat.color == color ? "selected" : "" %>><%= color  %></option>
    <% end %>
  </select>

  <br>

  <label for="birth_date">Birth date</label>
  <input id="birth_date" type="date" name="cat[birth_date]" value="<%= cat.birth_date %>">

  <br><br>

  <label for="description">Description</label>
  <textarea name="cat[description]"><%= cat.description %></textarea>

  <input type="submit" value= '<%= edit ? 'update cat' : 'add cat'%>'>
</form>